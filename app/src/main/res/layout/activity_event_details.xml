<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/title_post_event_text"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/time_post_event_text"
        android:id="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/duration_post_event_text"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/location_post_event_text"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/category_post_event_text"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/phone_post_event_text"
        android:id="@+id/textView9"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/description_post_event_text"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView9"
        android:layout_alignEnd="@+id/textView7"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/cancel_browse_event_button"
        android:layout_toEndOf="@+id/textView9"
        android:layout_alignParentBottom="true"
        android:onClick="onClick"
        android:text="@string/cancel_post_event_button_text" />

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/post_post_event_button_text"
        android:id="@+id/post_browse_event_button"
        android:layout_toEndOf="@+id/cancel_browse_event_button"
        android:layout_marginLeft="100dp"
        android:layout_alignParentBottom="true"
        android:onClick="onClick" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_browse_event_editText"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/time_browse_event_editText"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/textView13"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/duration_browse_event_editText"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignStart="@+id/time_browse_event_editText"
        android:layout_alignEnd="@+id/time_browse_event_editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/location_browse_event_editText"
        android:layout_alignTop="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        android:layout_alignEnd="@+id/duration_browse_event_editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phone_browse_event_editText"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/location_browse_event_editText"
        android:layout_alignEnd="@+id/category_browse_event_editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/description_browse_event_editText"
        android:layout_alignTop="@+id/textView13"
        android:layout_alignEnd="@+id/phone_browse_event_editText"
        android:layout_alignStart="@+id/phone_browse_event_editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category_browse_event_editText"
        android:layout_alignTop="@+id/textView8"
        android:layout_toEndOf="@+id/textView6"
        android:inputType="number"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/participants_browse_event_text"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:id="@+id/textView14" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/participants_browse_event_editText"
        android:layout_toEndOf="@+id/textView13"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignEnd="@+id/description_browse_event_editText"
        android:layout_above="@+id/cancel_browse_event_button" />

</RelativeLayout>